@page
@using MedicalClaim.Pages
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Username</label>
        <input type="text" asp-for="Username"/>
    </div>
    <div>
        <label>Password</label>
        <input type="password" asp-for="Password" />
    </div>
    <button type="submit">Login</button>
</form>